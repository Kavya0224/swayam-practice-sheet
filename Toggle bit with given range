class Solution {
  public:
    int toggleBits(int n, int l, int r) {
         // Create a mask with bits set in the range l to r
    int mask = 0;
    
    // Set bits from l to r in the mask
    for (int i = l; i <= r; ++i) {
        mask |= (1 << (i - 1));  // (i - 1) because bit positions are 0-based in C++
    }

    // Toggle the bits in the range by XORing with the mask
    return n ^ mask;
    }
};
