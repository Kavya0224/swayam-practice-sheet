class Solution {
public:
bool dfs(int src,vector<bool>& vis,vector<bool>& rec,vector<vector<int>>& edge){
    vis[src]=true;
    rec[src]=true;
    for(int i=0;i<edge.size();i++){
        int u=edge[i][1];
        int v=edge[i][0];
        if(u==src){
            if(!vis[v] && dfs(v,vis,rec,edge)) return true;
            else if(rec[v]) return true;
        }
    }
    rec[src]=false;
    return false;
}
    bool canFinish(int numCourses, vector<vector<int>>& prerequisites) {
        vector<bool> vis(numCourses,false);
        vector<bool> rec(numCourses,false);
        for(int i=0;i<numCourses;i++){
            if(!vis[i]){
                if(dfs(i,vis,rec,prerequisites)) return false;
            }
        }
        return true;
    }
};
